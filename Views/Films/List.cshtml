@model IEnumerable<MBDBapp.DBModels.Film>

@{
    ViewBag.Title = "All films";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Films</h2>

<p>
    @Html.ActionLink("Insert New Film", "Create")
</p>


<table id="filmsTable" class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Film</th>
            <th>Year</th>
            <th>Director</th>
            <th>Synopsis</th>
            <th>Runtime (min)</th>
            <th>Oscar Nominations</th>
            <th>Oscar Wins</th>
            <th>Actions</th>
        </tr>
    </thead>
</table>

@section scripts
{
    <script>
        $(document).ready(() => {

            let table = $("#filmsTable").DataTable(
                {
                    ajax: {
                        url: '/api/films',
                        dataSrc: ''
                    },
                    columns: [
                    {
                        data: "filmName",
                        render: (data, type, film) => {
                            return "<a href = '/films/edit/" + film.filmID + "'>" + data + "</a>";
                        }
                    },
                    {
                        data: "filmReleaseDate",
                        render: (data, type, film) => {
                            return data.slice(0, 4);
                        }
                    },
                    {
                        data: "director.directorName"
                    },

                    {
                        data: "filmSynopsis"
                    },
                    {
                        data: "filmRunTimeMinutes"
                    },
                    {
                        data: "filmOscarNominations"
                    },
                    {
                        data: "filmOscarWins"
                    },
                    {
                        data: "filmID",
                        render: (data, type, film) => {
                            return "<a href='/films/delete/" +data +"' class = 'btn-link js-delete' data-attribute-id=" + data + ">Delete</a>";
                        }
                    }
                ]
                }
            );

        })


    </script>



}



