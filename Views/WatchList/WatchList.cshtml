@{
    ViewBag.Title = "WatchList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My WatchList</h2>

<table id="myWatchList" class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Film name</th>
            <th>Film Synopsis</th>
            <th>Director</th>
            <th>Actors</th>
            <th>Delete</th>
        </tr>
        
    </thead>
    
</table>

@section scripts{
    <script>
        $(document).ready(() => {

            let table = $("#myWatchList").DataTable({
                ajax: {
                    url: "/api/watchlist",
                    dataSrc: "films"
                },
                columnDefs: [
                    {"width" : "100px", targets: 3}
                ],
                columns: [
                    {
                        data: "filmName",
                        render: (data, type, film) => {
                            
                            return "<a href='/films/details/" + film.filmID + "' target='_blank'>" + data + " (" + film.filmReleaseDate.slice(0, 4) + ") </a>";
                        }
                    },
                    {
                        data: "filmSynopsis"
                    },
                    {
                        data: "director.directorName"
                    },
                    {
                            data: "castMembers",
                            render: (data, type, film) => {
                                let actors = "";

                                for (let i = 0; i< data.length && i < 3; i++) {

                                    actors += data[i].actor.actorName;
                                    actors += "<br/>"
                                }

                                // list up to 3 known actors actors
                                
                            return actors;
                        }
                    },
                    {
                        data: "filmID",
                        render: (data, type, film) => {
                            return "<button class='btn-link js-delete' data-filmID=" + data + ">Delete</button>";
                        }
                    }
                ]
            });


            $("#myWatchList").on('click', '.js-delete', function () {
                var button = $(this);
                console.log(button)
                $.ajax({
                    url: '/api/watchlist/' + button.attr('data-filmid'),
                    method: "DELETE",
                    success: () => {
                        console.log("returned", table.row(button.parents('tr')))
                        table.row(button.parents("tr")).remove().draw();
                    }
                })
            })

        });

    </script>
    
}
